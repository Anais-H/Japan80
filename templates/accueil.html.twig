							<tr>
								<td>
									<figure class="image is-128x128"><img class="is-rounded on-the-left" src="{{ asset('build/' ~ artiste4.nom) }}" alt="{{ artiste4.nom }}"></figure>
								</td>
								<td class="text-cell">
									<p>{{artiste4.courteDescription}}</p>
								</td>
							</tr>
						</table>
					</article>

					<article class="tile is-child box">
